<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="example.conference">
<body>

<metal:main fill-slot="main">
  <tal:main-macro metal:define-macro="main"
                  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

    <div class="portrait">
      <img class="rounded-circle shadow p-1 bg-body rounded"
           src="${context/absolute_url}/@@images/image/psu_square" />
    </div>

    <div class="vcard" id="hcard">
      <h1 class="documentFirstHeading fn n">
        <span class="given-name" tal:content="context/first_name" />
        <span class="family-name" tal:content="context/last_name" />
        <span class="honorific-suffix" tal:content="context/suffix" />
      </h1>

      <ul class="title jobTitle">
        <li tal:repeat="jobTitle context/jobTitles"
            tal:content="jobTitle" />
      </ul>

      <div class="contact-info">
        <div tal:condition="context/email">
          <i class="fas fa-at" aria-hidden="true" />
          <span>Email</span>
          <a href="mailto:${context/email}"
             >${context/email}</a>
        </div>

        <div tal:condition="context/office_phone">
          <i class="fas fa-phone" aria-hidden="true" />
          <span>Phone</span>
          <tal:tellink tal:condition="context/office_phone_raw">
            <a href="tel:${context/office_phone_raw}"
               >${context/office_phone}</a>
          </tal:tellink>
          <tal:tel tal:condition="python: not context.office_phone_raw">
            <span tal:content="context/office_phone" />
          </tal:tel>
        </div>

        <div tal:condition="context/linkedin_url">
          <i class="fab fa-linkedin" aria-hidden="true" />
          <span>LinkedIn</span>
          <a href="${context/linkedin_url}"
             >Connect with me</a>
        </div>
      </div>

      <div tal:condition="context/first_generation">
        <img src="${portal_url}/++theme++psu-educational-equity/images/firstgen.png"
             alt="#psuFirstGen" />
        I am
        <a href="https://success.psu.edu/first-generation-psu">First Gen!</a>
        Are you?
      </div>
    </div>

    <div tal:replace="structure provider:plone.abovecontentbody" />

    <!-- <p tal:replace="structure context/body"></p> -->

    <div tal:replace="structure provider:plone.belowcontentbody" />

  </tal:main-macro>
</metal:main>

</body>
</html>
