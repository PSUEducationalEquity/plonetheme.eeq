<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="plone" metal:use-macro="context/@@main_template/macros/master">
  <body>
    <metal:content-core fill-slot="content-core">

      <div metal:define-macro="text-field-view"
          id="parent-fieldname-text" class="stx"
          tal:define="text view/text"
          tal:condition="text"
          tal:attributes="class view/text_class">
        <div metal:define-slot="inside"
             tal:replace="structure text">The body</div>
      </div>

      <div class="visualClear"><!-- --></div>

      <metal:listingmacro define-macro="listing">
        <tal:results define="batch view/batch">
          <tal:listing condition="batch">

            <tal:entries tal:repeat="item batch">

              <a class="summary-with-images-link"
                 href="${item/getURL}"
                 tal:define="img_url string: ${item/getURL}/@@images/image/psu_square">
                <div class="card card-summary-with-images card-border">
                  <div class="container">
                    <div class="row">
                      <div class="col-12 col-sm-9 col-xl-10 order-last content">
                        <p class="mt-0 card-date">${item/@@psu-equity-date-info/date}</p>
                        <h3 class="h3 mt-0">${item/title}</h3>
                        <p>${item/description}</p>
                      </div>
                      <div class="col-sm-3 col-xl-2 order-first d-none d-sm-block lead-image">
                        <img class="w-100"
                             data-src="${img_url}"
                             src="${img_url}"
                             />
                      </div>
                    </div>
                  </div>
                </div>
              </a>

            </tal:entries>

            <div metal:use-macro="context/batch_macros/macros/navigation" />

          </tal:listing>

          <metal:empty metal:define-slot="no_items_in_listing">
            <p class="discreet"
                tal:condition="not: batch"
                tal:content="view/no_items_message">
              There are currently no items in this folder.
            </p>
          </metal:empty>

        </tal:results>
      </metal:listingmacro>
    </metal:content-core>
  </body>
</html>
